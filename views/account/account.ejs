<% if (title) { %>
    <h1><%= title%></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if(errors) { %>
    <ul class="error">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li> 
        <% }) %>
    </ul><%} %>

<h2>Welcome <%= locals.accountData.account_firstname  %></h2>

<div id="accountInformation">
    <p><a title="account management" href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
</div>

<% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
    <div id="inventoryManagement">
        <h3>Inventory Management</h3>
        <p><a title="inventory Management" href="/inv/">Click to manage inventory</a></p>
    </div>
<% } %>


