 <!-- Check for a a title. if no title, redirect -->
 <% if (title) { %>
    <h1><%= title%></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="message warning">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<p>Confirm Deletion - The delete is permanent.</p>

<form id="deleteForm" action="/inv/delete/" method="post">
    <fieldset id="account">
        <label for="inv_make">Make:</label>
        <input type="text" name="inv_make" id="inv_make" required placeholder="Hyundai" value="<%= locals.inv_make %>" readonly>

        <label for="inv_model">Model:</label>
        <input type="text" name="inv_model" id="inv_model" required placeholder="Sonata" value="<%= locals.inv_model %>" readonly>

        <label for="inv_year">Year:</label>
        <input type="number" name="inv_year" id="inv_year" placeholder="4-digit year" min="1900" max="2030" required placeholder="2017" value="<%= locals.inv_year %>" readonly>

        <label for="inv_price">Price:</label>
        <input type="number" name="inv_price" id="inv_price" min="0" placeholder="decimal or integer" step=".01" required value="<%= locals.inv_price %>" readonly>

        <button type="submit">Delete</button>

    
        <input type="hidden" name="inv_id" <% if(locals.inv_id) {%> value="<%= locals.inv_id %>" <% } %>>

    </fieldset>
</form>