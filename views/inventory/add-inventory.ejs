 <!-- Check for a a title. if no title, redirect -->
 <% if (title) { %>
    <h1><%= title%></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="message warning">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<form id="inventoryForm" action="/inv/new/inv" method="post">
    <fieldset id="account">
        <label for="classification_id">Classification:</label>
        <select name="classification_id" id="classification_id" required value="<%= locals.classification_id %>">
            <option value="Select" selected disabled>Choose a Classification</option>
            <%- classifications %>
        </select> 
        <label for="inv_make">Make:</label>
        <input type="text" name="inv_make" id="inv_make" required placeholder="Hyundai" value="<%= locals.inv_make %>">

        <label for="inv_model">Model:</label>
        <input type="text" name="inv_model" id="inv_model" required placeholder="Sonata" value="<%= locals.inv_model %>">

        <label for="inv_year">Year:</label>
        <input type="number" name="inv_year" id="inv_year" placeholder="4-digit year" min="1900" max="2030" required placeholder="2017" value="<%= locals.inv_year %>">

        <label for="inv_description">Description:</label>
        <textarea rows="10" cols="10" name="inv_description" id="inv_description" required value="<%= locals.inv_description %>">
        </textarea>

        <label for="inv_image">Image:</label>
        <input type="text" name="inv_image" id="inv_image" required value="/images/vehicles/no-image.png">

        <label for="inv_thumbnail">Thumbnail:</label>
        <input type="text" name="inv_thumbnail" id="inv_thumbnail" required value="/images/vehicles/no-image.png">

        <label for="inv_price">Price:</label>
        <input type="number" name="inv_price" id="inv_price" min="0" placeholder="decimal or integer" step=".01" required value="<%= locals.inv_price %>">

        <label for="inv_miles">Miles:</label>
        <input type="number" name="inv_miles" id="inv_miles" placeholder="digits only" required value="<%= locals.inv_miles %>">

        <label for="inv_color">Color:</label>
        <input type="text" name="inv_color" id="inv_color" required value="<%= locals.inv_color %>">



        <button type="submit">Add Item to Inventory</button>
    </fieldset>
</form>